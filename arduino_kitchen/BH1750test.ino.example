/*

Example of BH1750 library usage.

This example initalises the BH1750 object using the default
high resolution mode and then makes a light level reading every second.

Connection:
 VCC-5v
 GND-GND
 SCL-SCL(analog pin 5)
 SDA-SDA(analog pin 4)
 ADD-NC or GND

*/

#include <Wire.h>
#include "BH1750.h"

BH1750 lightMeter1(false, BH1750_CONTINUOUS_HIGH_RES_MODE);
BH1750 lightMeter2(true, BH1750_CONTINUOUS_HIGH_RES_MODE);

void setup(){
  Serial.begin(115200);
  Serial.println("Running...");
	lightMeter1.begin();
	lightMeter2.begin();
}


void loop() {
  uint16_t lux;
	lux = lightMeter1.readLightLevel();
  Serial.print("Light1: ");
  Serial.print(lux);
  Serial.print(" lx, ");
	lux = lightMeter2.readLightLevel();
  Serial.print("Light2: ");
  Serial.print(lux);
  Serial.println(" lx");
}
